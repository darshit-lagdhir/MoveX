# Backend Configuration
NODE_ENV=production
PORT=4000

# Database (use managed database service in production)
DB_HOST=your-db-host.example.com
DB_PORT=5432
DB_USER=movex_app_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=movex_auth
DB_SSL=true

# JWT & Sessions
JWT_SECRET=CHANGE_ME_RANDOM_32_CHARS_MIN
SESSION_SECRET=CHANGE_ME_RANDOM_32_CHARS_MIN
SESSION_MAX_AGE=3600000

# Password Reset
RESET_TOKEN_EXPIRY_MINUTES=15
FRONTEND_RESET_URL=https://app.movex.example/reset-password

# SMTP (Email)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=CHANGE_ME_SENDGRID_API_KEY

# Security
CSRF_ENABLED=true
SESSION_SECURE=true
SESSION_SAME_SITE=Strict

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REGISTER=3
RATE_LIMIT_FORGOT_PASSWORD=3
RATE_LIMIT_GENERAL=100

# Logging
LOG_AUTH_ATTEMPTS=true
LOG_LEVEL=info

# Frontend
FRONTEND_URL=https://app.movex.example

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-key@sentry.io/project
